<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".ui.movie.fragments.MovieDetailFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ui.movie.fragments.MovieDetailFragment">

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/movie_detail_image"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            app:iss_auto_cycle="true"
            app:iss_period="1000"
            app:iss_delay="0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/movie_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:lines="1"
                android:ellipsize="end"
                android:fontFamily="@font/titillium_web_bold"
                android:text="Incrediable"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/movie_watch_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/titillium_web_bold"
                android:text="Watch Trailer"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:lines="1"
                android:ellipsize="end"
                android:fontFamily="@font/titillium_web_bold"
                android:text="Genere"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/movie_detail_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:lines="1"
                android:ellipsize="end"
                android:fontFamily="@font/titillium_web_regular"
                android:text=""
                android:textColor="@color/black_50"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:lines="1"
                android:ellipsize="end"
                android:fontFamily="@font/titillium_web_bold"
                android:text="Date"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/movie_detail_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:lines="1"
                android:ellipsize="end"
                android:fontFamily="@font/titillium_web_regular"
                android:text=""
                android:textColor="@color/black_50"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:lines="1"
                android:ellipsize="end"
                android:fontFamily="@font/titillium_web_bold"
                android:text="Overview"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/movie_detail_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/titillium_web_regular"
                android:lines="5"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/black_50"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="36dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>